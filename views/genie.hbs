
<form id="ext-merchant-frm" method="POST" action="{{genieBaseUrl}}" accept-charset="UTF-8" enctype="application/x-www-form-urlencoded">

  <input type="hidden" id="merchantPgIdentifier" name="merchantPgIdentifier" value="{{merchantPgIdentifier}}"/>
  <input type="hidden" id="currency" name="currency" value="LKR"/>
  <input type="hidden" id="paymentMethod" name="paymentMethod" value="Genie"/>
  <input type="hidden" id="orderId" name="orderId" value="6"/>

  <input type="hidden" id="invoiceNumber" name="invoiceNumber" value="{{invoiceNo}}"/>
  <input type="hidden" id="successUrl" name="successUrl" value="{{callBackUrl}}"/>
  <input type="hidden" id="errorUrl" name="errorUrl" value="{{callBackUrl}}"/>

  <input type="hidden" id="storeName" name="storeName" value="{{storeName}}"/>
  <input type="hidden" id="transactionType" name="transactionType" value="VOID"/>
  <input type="hidden" id="timeout" name="timeout" value="90"/>

  <input type="hidden" id="transactionDateTime" name="transactionDateTime" value="{{dateTime}}"/>
  <input type="hidden" id="language" name="language" value="en"/>

  <input type="hidden" id="txnToken" name="txnToken" value="{{txnToken}}"/>
  <input type="hidden" id="disableWebCheckoutQr" name="disableWebCheckoutQr" value="Y"/>
  <input type="hidden" id="disableWebCheckoutGuest" name="disableWebCheckoutGuest" value="N"/>
  <input type="hidden" id="disableWebCheckoutSignIn" name="disableWebCheckoutSignIn" value="Y"/>
  <input class="form-control" name="itemList" type="hidden" value="eSip lesson item"/>
  <input type="hidden" id="chargeTotal" name="chargeTotal" value="{{total}}"/>
  <button class="btn btn-primary btn-hover-secondary btn-width-100 mt-40" type="submit" style="display: none">Place order
  </button>
</form>

